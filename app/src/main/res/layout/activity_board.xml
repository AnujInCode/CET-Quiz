<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Board"



    tools:showIn="@layout/activity_menu">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:padding="@dimen/_5sdp"
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/Qid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/nav_header_name"
                android:text="  MMIT-CET"

                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_25sdp"
                android:textColor="#000"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:layout_centerVertical="true"

                />

            <Button

                android:id="@+id/nav_header_name"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:textSize="@dimen/_25sdp"
                android:background="@drawable/side"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:id="@+id/unit"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/unit"
                android:paddingRight="@dimen/_20sdp"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:id="@+id/series"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableRight="@drawable/series"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:id="@+id/papers"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ques"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"

                android:id="@+id/bookmark"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableRight="@drawable/bmark"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/md_transparent"                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/video"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/video"
                android:foreground="?attr/selectableItemBackground"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>

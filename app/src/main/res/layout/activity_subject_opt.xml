<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".SubjectOpt">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="86dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/nav_header_name"
                android:layout_width="0dp"
                android:layout_height="72dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/gradient1"
                android:foreground="@drawable/md_transparent"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:text="    MMIT-MHCET"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textColor="#FFFF"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"

            >

            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/physics"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/phy"
                android:padding="@dimen/_20sdp"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/chemistry"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableRight="@drawable/chem"
                android:padding="@dimen/_20sdp"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:layout_marginHorizontal="@dimen/_10sdp"
                android:id="@+id/maths"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_99sdp"
                android:layout_marginVertical="@dimen/_6sdp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/maths"
                android:padding="@dimen/_20sdp"
                android:background="@drawable/md_transparent"
                android:textAllCaps="false"
                android:textColor="#2f2e2e"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
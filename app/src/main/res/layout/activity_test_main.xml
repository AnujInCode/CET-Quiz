<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.edu.mmit.quiz.test">


    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_below="@id/bookmark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:orientation="horizontal"

            >

            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp">


                <io.github.kexanie.library.MathView
                    android:id="@+id/KaTeX_Ques"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="(A)"
                android:textSize="@dimen/_20sdp"

                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <io.github.kexanie.library.MathView
                    android:id="@+id/KaTeX_OptA"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="(B)"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <io.github.kexanie.library.MathView
                    android:id="@+id/KaTeX_OptB"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="(C)"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <io.github.kexanie.library.MathView
                    android:id="@+id/KaTeX_OptC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:gravity="center"
                android:text="(D)"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

            <androidx.core.widget.NestedScrollView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <io.github.kexanie.library.MathView
                    android:id="@+id/KaTeX_OptD"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="visible"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>
            </androidx.core.widget.NestedScrollView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:layout_below="@id/buttons"
            android:orientation="horizontal">

            <androidx.core.widget.NestedScrollView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <io.github.kexanie.library.MathView
                    android:id="@+id/Hint"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    auto:engine="MathJax"></io.github.kexanie.library.MathView>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>

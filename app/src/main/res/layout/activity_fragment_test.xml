<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:timer="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".test">


    <TextView
        android:id="@+id/Qid"
        android:layout_width="71dp"
        android:layout_height="29dp"
        android:layout_marginStart="16dp"
        android:textSize="@dimen/_25sdp"

        android:textStyle="bold"
        auto:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/bookmark"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bookmarked"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"
        auto:layout_constraintEnd_toStartOf="@+id/timer"
        auto:layout_constraintStart_toEndOf="@+id/Qid"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="40dp"
        android:background="@drawable/close"
        android:visibility="gone"

        />

    <TextView

        android:id="@+id/timer"
        android:layout_width="80dp"
        android:layout_height="31dp"
        android:layout_marginEnd="8dp"
        android:textSize="@dimen/_20sdp"
        android:visibility="visible"
        auto:layout_constraintEnd_toEndOf="@+id/surfaceView"
        tools:layout_editor_absoluteY="16dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="392dp"
        android:layout_height="453dp"
        android:layout_marginBottom="8dp"
        auto:layout_constraintBottom_toTopOf="@+id/finish"
        auto:layout_constraintTop_toBottomOf="@+id/surfaceView"
        tools:layout_editor_absoluteX="0dp" />


    <Button
        android:id="@+id/Previous"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="PREV"
        auto:layout_constraintEnd_toEndOf="parent"
        auto:layout_constraintStart_toEndOf="@+id/finish"
        tools:layout_editor_absoluteY="523dp" />

    <Button
        android:id="@+id/Next"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="NEXT"
        auto:layout_constraintEnd_toStartOf="@+id/finish"
        auto:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="523dp" />


    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:visibility="visible"
        auto:layout_constraintEnd_toStartOf="@+id/Previous"
        auto:layout_constraintHorizontal_bias="0.5"
        auto:layout_constraintStart_toEndOf="@+id/Next"
        tools:layout_editor_absoluteY="523dp" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="387dp"
        android:layout_height="68dp"
        auto:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
